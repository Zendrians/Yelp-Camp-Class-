<% include ../partials/header %>


<div class="container">

    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View all of our Campgrounds from all over Colombia</p>
        <p><a href="/campgrounds/new" class="btn btn-outline-primary btn-lg">Add a new Campground</a></p>
    </header>
    
    <div class="row">
        
        
            <% for (var i = 0; i < campgrounds.length; i++) { %>
            
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card" style="width: 100%;">
                <img src="<%=campgrounds[i]["image"]%>" class="card-img-top index-card-img img-fluid" alt="...">
                <div class="card-body">
                <h5 class="card-title"><%= campgrounds[i]["name"] %></h5>
                <p class="card-text"><%= campgrounds[i]["description"].substring(0,50) %>...</p>
                <a href="/campgrounds/<%=campgrounds[i]["_id"]%>" class="btn btn-primary">View</a>
                </div>
                </div>
            </div>
          
          
            <% }; %>
        
    </div>

</div>

<% include ../partials/footer %>

 